<%- include('header') %>

<link href="/css/authenticate.css" rel="stylesheet" type="text/css" />

<body>
  <section class="Form my-5 mx-5">
    <div class="container">
      <div class="row g-0">
        <div class="col-lg-5">
          <img src="/img/flowers/signin.jpg" class="img-fluid" />
        </div>
        <div class="col-lg-7 px-5 pt-7">
          <div class="row">
            <div class="col-8">
              <h1 class="font-weight-bold py-3" style="color: black">Register</h1>
            </div>

            <div class="col">
              <h1 class="font-weight-bold py-3">
                <a href="/" style="text-decoration: none; color: black"
                  ><i class="fas fa-home"></i> Back to home</a
                >
              </h1>
            </div>
          </div>

          <form
            action="/auth/signup"
            method="post"
            onsubmit="return validateForm()"
          >
            <div class="form-row">
              <div class="col-lg-7" style="gap: 10px">
                <input
                  type="email"
                  placeholder="Email"
                  class="form-control my-3 p-4"
                  name="email"
                  required
                />
              </div>
            </div>
            <div class="form-row">
              <div class="col-lg-7">
                <input
                  type="password"
                  placeholder="Fill in your password"
                  class="form-control my-3 p-4"
                  name="password"
                  required
                />

                <div name="passwordStrength"></div>
              </div>
            </div>

            <div class="form-row">
              <div class="col-lg-7">
                <input
                  type="password"
                  placeholder="Refill your password"
                  class="form-control my-3 p-4"
                  name="password-check"
                  required
                />
              </div>
            </div>

            <div class="form-row">
              <div class="col-lg-7">
                <input
                  type="text"
                  placeholder="phone number"
                  class="form-control my-3 p-4"
                  name="phone"
                  required
                />
              </div>
            </div>
            <div class="form-row">
              <div class="col-lg-7">
                <input
                  type="text"
                  placeholder="Address"
                  class="form-control my-3 p-4"
                  name="address"
                  required
                />
              </div>
            </div>

            <div class="form-row">
              <div class="col-lg-7">
                <input
                  type="submit"
                  value="Register"
                  class="btn1 mt3 mb-5"
                  style="background-color: white; color: #ff8f52"
                  name="submit"
                />
              </div>
            </div>

            <div>
              <p><%= message %></p>
              <div name="user-error" style="color: red"></div>
            </div>

            <p>
              Already have an account?
              <a
                href="/auth/signin"
                style="text-decoration: none"
              >
                Login</a
              >
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
    crossorigin="anonymous"
  >
        const password = document.getElementsByName("password");
        const password_check = document.getElementsByName("password-check");
        const phone = document.getElementsByName("phone");
        const user_error = document.getElementsByName("user-error");
        const submit = document.getElementsByName("submit");

        const checkPasswordStrength = (string) => {
          let strongPassword = new RegExp('(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[^A-Za-z0-9])(?=.{8,})');
          const passwordStrength = document.getElementsByName("passwordStrength");

          if (strongPassword.test(string)) {
            passwordStrength.innerText = "Strong";
            passwordStrength.style.color = "green";
            return true;
          } else {
            passwordStrength.innerText = "Weak";
            passwordStrength.style.color = "red";
            return false;
          }
        };

        const recheckPassword = (string_1, string_2) => {
          if (string_1 === string_2) {
            return true;
          } else {
            return false;
          }
        };

        const checkPhoneNumber = (string) => {
          let phoneNumber = new RegExp('^[0-9]{10}$');

          if (phoneNumber.test(string) && string.length === 10) {
            return 1;
          } else {
            user_error.innerText = "Phone number is not valid";
            return 0;
          }
        };
  </script>
</body>
<%- include('footer') %>
